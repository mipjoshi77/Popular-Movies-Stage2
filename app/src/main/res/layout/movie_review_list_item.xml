<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/author_name_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/author_name_header_text_view_layout_margin_start"
        android:layout_marginTop="@dimen/author_name_header_text_view_layout_margin_top"
        android:text="@string/movie_review_author_name_header_text"
        android:textColor="@android:color/black"
        android:textSize="@dimen/movie_overview_value_text_view_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/review_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/review_author_text_view_layout_margin_start"
        android:layout_marginTop="@dimen/review_author_text_view_layout_margin_top"
        android:textColor="@android:color/black"
        android:textSize="@dimen/movie_overview_value_text_view_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/review_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/review_content_text_view_layout_margin_end"
        android:layout_marginStart="@dimen/review_content_text_view_layout_margin_start"
        android:layout_marginTop="@dimen/review_content_text_view_layout_margin_top"
        android:textColor="@android:color/black"
        android:textSize="@dimen/movie_overview_value_text_view_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_author" />

    <Button
        android:id="@+id/full_review_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/full_review_button_layout_margin_end"
        android:layout_marginStart="@dimen/full_review_button_layout_margin_start"
        android:layout_marginTop="@dimen/full_review_button_layout_margin_top"
        android:text="@string/movie_full_review_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_content" />

    <View
        android:id="@+id/divider_line"
        android:layout_width="@dimen/divider_line_layout_width"
        android:layout_height="@dimen/divider_line_layout_height"
        android:layout_marginEnd="@dimen/divider_line_layout_margin_end"
        android:layout_marginStart="@dimen/divider_line_layout_margin_start"
        android:layout_marginTop="@dimen/divider_line_layout_margin_top"
        android:background="?android:attr/listDivider"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/full_review_button" />

</android.support.constraint.ConstraintLayout>