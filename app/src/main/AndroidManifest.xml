<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nanodegree.udacity.popular_movies_stage1">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="nanodegree.udacity.popular_movies_stage2.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="nanodegree.udacity.popular_movies_stage2.DetailsActivity"
            android:parentActivityName="nanodegree.udacity.popular_movies_stage2.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nanodegree.udacity.popular_movies_stage2.MainActivity" />
        </activity>
    </application>

</manifest>